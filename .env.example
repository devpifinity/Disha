# Environment Variables Template
# Copy this file to .env and update the values as needed

# Application Configuration
VITE_APP_NAME="Disha Career Platform"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Career Discovery Platform"

# API Configuration (uncomment and configure when backend is ready)
# VITE_API_BASE_URL="http://localhost:3000/api"
# VITE_API_TIMEOUT=10000

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=false

# External Services (configure when needed)
# VITE_GOOGLE_ANALYTICS_ID=""
# VITE_SENTRY_DSN=""

# Social Media Links
VITE_TWITTER_HANDLE="@disha_career"
VITE_SUPPORT_EMAIL="support@disha.com"

# Build Configuration
# VITE_BUILD_MODE="production"
